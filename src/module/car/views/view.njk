{% extends "views/layouts/base.njk" %}

{% block body %}
  <section class="section is-light">
    <div class="car-data"
      data-id="{{ car.id }}"
      data-brand="{{ car.brand }}"
      data-model="{{ car.model }}"
      data-year="{{ car.year }}"
      >
      <div class="container">
        <div class="columns">
          <div class="column">
            <h1 class="title">
              {{ car.brand }}
              {{ car.model }}
              {{ car.year }}
            </h1>
            <table class="table">
              <tbody>
                <tr>
                  <th>ID</th>
                  <td>{{ car.id }}</td>
                </tr>
                <tr>
                  <th>Marca</th>
                  <td>{{ car.brand }}</td>
                </tr>
                <tr>
                  <th>Modelo</th>
                  <td>{{ car.model }}</td>
                </tr>
                <tr>
                  <th>Año</th>
                  <td>{{ car.year }}</td>
                </tr>
                <tr>
                  <th>Kilometraje</th>
                  <td>{{ car.kms }} kms</td>
                </tr>
                <tr>
                  <th>Color</th>
                  <td>{{ car.color }}</td>
                </tr>
                <tr>
                  <th>Aire acondicionado (si/no)</th>
                  <td>{{ car.ac }}</td>
                </tr>
                <tr>
                  <th>Max pasajeros</th>
                  <td>{{ car.passengers }}</td>
                </tr>
                <tr>
                  <th>Transmisión</th>
                  <td>{{ car.transmission }}</td>
                </tr>
                <tr>
                  <th>Precio diario</th>
                  <td>$ {{ car.price }}</td>
                </tr>
                <tr>
                  <th>Creado</th>
                  <td>{{ car.createdAt }}</td>
                </tr>
                <tr>
                  <th>Modificado</th>
                  <td>{{ car.updatedAt }}</td>
                </tr>
              </tbody>
            </table>
            <div class="buttons">
              <a class="button is-link is-outlined" href="{{ '/car/edit/' + car.id }}">
                <span>Editar</span>
                <span class="icon is-small">
                  <i class="fas fa-edit"></i>
                </span>
              </a>
              <button class="button is-danger is-outlined delete-button">
                <span>Borrar</span>
                <span class="icon is-small">
                  <i class="fas fa-times"></i>
                </span>
              </button>
            </div>
          </div>
          <div class="column">
            <div class="tile is-parent">
              <article class="tile is-child notification is-info is-light">
                <div class="content">
                  <div class="content">
                    <img src="{{ car.img if car.img else '/img/no-image-available.jpg' }}" alt="car-image">
                  </div>
                </div>
              </article>
            </div>
            {% include "car/views/layouts/reservations-table.njk" %}
          </div>
        </div>
      </div>
    </div>
    {% include "car/views/layouts/delete-modal.njk" %}
  </section>
{% endblock %}

{% block footerScripts %}
  <script type="text/javascript" src="/js/toggle-delete-modal.js"></script>
{% endblock %}
