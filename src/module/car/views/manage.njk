{% extends "views/layouts/base.njk" %}

{% block stylesheets %}
  <link rel="stylesheet" href="/css/manage.css">
{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <h1 class="title">Hay {{ cars.length }} autos.</h1>
      <table class="table align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Kilómetros</th>
            <th>Color</th>
            <th>AC</th>
            <th>Máx. Pasajeros</th>
            <th>Transmisión</th>
            <th>Precio/día</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for car in cars %}
            {% include "car/views/layouts/table-row.njk" %}
          {% endfor %}
        </tbody>
      </table>
      {% include "car/views/layouts/delete-modal.njk" %}
    </div>
  </section>
{% endblock %}

{% block footerScripts %}
  <script type="text/javascript" src="/js/toggle-delete-modal.js"></script>
{% endblock %}
