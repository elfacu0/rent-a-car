<form method="POST" action="/car/save" enctype="multipart/form-data">
    {% if car %}
        <input type="hidden" name="id" value="{{ car.id }}">
    {% endif %}
    <div class="columns">
        <div class="column">
            <div class="field">
                <label class="label">Marca</label>
                <div class="control">
                    <div class="select">
                        <select name="brand">
                            <option disabled>Seleccione...</option>
                            <option value="Ford" {{ 'selected' if car.brand === 'Ford' }}>Ford</option>
                            <option value="Chevrolet" {{ 'selected' if car.brand === 'Chevrolet' }}>Chevrolet</option>
                            <option value="Peugeot" {{ 'selected' if car.brand === 'Peugeot' }}>Peugeot</option>
                            <option value="Honda" {{ 'selected' if car.brand === 'Honda' }}>Honda</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Modelo</label>
                <div class="control">
                    <input required class="input" type="text" name="model" placeholder="i.e. Onix, 207, Fit"
                           value="{{ car.model if car }}">
                </div>
            </div>
            <div class="field">
                <label class="label">Año</label>
                <div class="control">
                    <div class="select">
                        <select name="year">
                            <option disabled>Seleccione...</option>
                            <option value="2020" {{ 'selected' if car.year === 2020 }}>2020</option>
                            <option value="2019" {{ 'selected' if car.year === 2019 }}>2019</option>
                            <option value="2018" {{ 'selected' if car.year === 2018 }}>2018</option>
                            <option value="2017" {{ 'selected' if car.year === 2017 }}>2017</option>
                            <option value="2016" {{ 'selected' if car.year === 2016 }}>2016</option>
                            <option value="2015" {{ 'selected' if car.year === 2015 }}>2015</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Kms</label>
                <div class="control">
                    <input required class="input" type="number" name="kms" value="{{ car.kms if car }}">
                </div>
            </div>
            <div class="field">
                <label class="label">Color</label>
                <div class="control">
                    <input required class="input" type="text" name="color" value="{{ car.color if car }}">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label class="label">Aire Acondicionado</label>
                    <label class="radio">
                        <input required type="radio" name="ac" value="Yes" {{ 'checked' if car.ac === 'Yes' }}>
                        Si
                    </label>
                    <label class="radio">
                        <input required type="radio" name="ac" value="No" {{ 'checked' if car.ac === 'No' }}>
                        No
                    </label>
                </div>
            </div>
            <div class="field">
                <label class="label">Máx. PAsajeros</label>
                <div class="control">
                    <div class="select">
                        <select name="passengers">
                            <option disabled>Seleccione...</option>
                            <option value="2" {{ 'selected' if car.passengers === 2 }}>2</option>
                            <option value="3" {{ 'selected' if car.passengers === 3 }}>3</option>
                            <option value="4" {{ 'selected' if car.passengers === 4 }}>4</option>
                            <option value="5" {{ 'selected' if car.passengers === 5 }}>5</option>
                            <option value="6" {{ 'selected' if car.passengers === 6 }}>6</option>
                            <option value="7" {{ 'selected' if car.passengers === 7 }}>7</option>
                            <option value="8" {{ 'selected' if car.passengers === 8 }}>8</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label class="label">Transmisión</label>
                    <label class="radio">
                        <input required type="radio" name="transmission"
                               value="Manual" {{ 'checked' if car.transmission === 'Manual' }}>
                        Manual
                    </label>
                    <label class="radio">
                        <input required type="radio" name="transmission"
                               value="Automatic" {{ 'checked' if car.transmission === 'Automatic' }}>
                        Automático
                    </label>
                </div>
            </div>
            <div class="field">
                <label class="label">Precio/día</label>
                <div class="control">
                    <input required class="input" type="number" name="price" autocomplete="off"
                           value="{{ car.price if car }}">
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link" type="submit">Guardar</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light cancel-button" type="button">Cancelar</button>
                </div>
            </div>
        </div>
        <div class="column">
            <input type="hidden" name="img" value="{{ car.img }}">
            <div class="field">
                <label class="label">Foto</label>
                <img src="{{ car.img if car.img else '/img/no-image-available.jpg' }}" alt="car-photo">
                <div class="control">
                    <input class="input" type="file" name="car-photo">
                </div>
            </div>
        </div>
    </div>
</form>
