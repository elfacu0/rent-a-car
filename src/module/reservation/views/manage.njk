{% extends "views/layouts/base.njk" %}

{% block stylesheets %}
  <link rel="stylesheet" href="/css/manage.css">
{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <h1 class="title">Hay {{ reservations.length }} reservas.</h1>
      <table class="table align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Fecha inicio</th>
            <th>Fecha fin</th>
            <th>Precio por día</th>
            <th>Precio total</th>
            <th>Método de pago</th>
            <th>Pago (si/no)</th>
            <th>Estado</th>
            <th>Auto</th>
            <th>Usuario</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for reservation in reservations %}
            {% include "reservation/views/layouts/table-row.njk" %}
          {% endfor %}
        </tbody>
      </table>
      {% include "reservation/views/layouts/modal.njk" %}
    </div>
  </section>
{% endblock %}

{% block footerScripts %}
  <script type="text/javascript" src="/js/toggle-reservation-modals.js"></script>
{% endblock %}
